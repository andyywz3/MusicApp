<h1><%= @band.name  %>'s Tracks </h1>

<ul>
  <% @band.albums.each do |album| %>
    <li>
      <a href="<%= album_url(album) %>"><%= album.name %></a>
      <ol>
        <% album.tracks.each do |track| %>
        <li><a href="<%= track_url(track) %>"><%= track.name %></a></li>
        <% end %>
      </ol>
    </li>
  <% end %>
</ul>