<h1> <%= @band.name %>'s page</h1>

<ul>
  <% @band.albums.each do |album| %>
    <li>
      <a href="<%= albums_url(@band) %>"><%= album.name %></a>
      <ol>
        <% album.tracks.each do |track| %>
        <li><a href="<%= track_url(@band,album, track) %>"><%= track.name %></a>
        </li>
        <% end %>
      </ol>
    </li>
  <% end %>
</ul>

<br>
<form action="<%= band_url(@band) %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Remove band">
</form>